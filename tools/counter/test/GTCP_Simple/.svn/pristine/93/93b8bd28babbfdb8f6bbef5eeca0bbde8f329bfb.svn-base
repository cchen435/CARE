# Define the following to 1 to enable build
BENCH_GTC_MPI = 1
BENCH_CHARGEI_PTHREADS = 0
BENCH_PUSHI_PTHREADS = 0
BENCH_SERIAL = 0

CC = mpicc
MPICC = mpicc
CFLAGS = -g -Wall -Wextra -pedantic -std=gnu99 -fopenmp -DUSE_MPI=1
COPTFLAGS = -O3
CDEPFLAGS = -MD 
CLDFLAGS = -lm -static

EXEEXT = _sith_gcc_debug

AR = ar
ARCRFLAGS = cr
RANLIB = ranlib
